import java.util.Scanner;

public class ConversorTemperatura {

    public static void main(String[] args) {
        // 1. Inicializa o Scanner para receber a entrada do usuário
        Scanner scanner = new Scanner(System.in);
        double celsius;

        // 2. Recebe a temperatura em Celsius
        System.out.println("--- Conversor de Temperaturas ---");
        System.out.print("Digite a temperatura em graus Celsius (°C): ");
        
        // Garante que o usuário digite um valor numérico válido
        while (!scanner.hasNextDouble()) {
            System.out.println("Entrada inválida. Por favor, digite um número para a temperatura: ");
            scanner.next(); // Descarta a entrada inválida
            System.out.print("Digite a temperatura em graus Celsius (°C): ");
        }
        celsius = scanner.nextDouble();

        // 3. Realiza os cálculos de conversão

        // Fórmula para Fahrenheit: F = (C * 9/5) + 32
        // Usamos 9.0/5.0 para garantir que a divisão seja feita com números de ponto flutuante (double)
        double fahrenheit = (celsius * 9.0/5.0) + 32;

        // Fórmula para Kelvin: K = C + 273.15
        double kelvin = celsius + 273.15;

        // 4. Exibe os resultados
        System.out.println("\n--- Resultados da Conversão ---");
        System.out.printf("Temperatura em Celsius: %.2f °C\n", celsius);
        System.out.printf("Temperatura em Fahrenheit: %.2f °F\n", fahrenheit);
        System.out.printf("Temperatura em Kelvin: %.2f K\n", kelvin);

        // Fecha o Scanner
        scanner.close();
    }
}
